# Copy this file to .env and fill in values for your environment.

# --- Database (SQL Server) ---
DB_SERVER=localhost
DB_NAME=EPU
DB_USER=
DB_PASSWORD=
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_PORT=1433

# --- Security ---
SECRET_KEY=change-me-to-a-long-random-string

# --- App/Base URL ---
BASE_URL=http://localhost:4200

# --- Email (Gmail or SMTP credentials) ---
GMAIL_USER=
GMAIL_PASS=
SUPPORT_EMAIL_TO=

# --- Stripe ---
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# --- Logging ---
LOG_LEVEL=INFO
LOG_JSON=true
LOG_FILE=logs/app.log
LOG_MAX_BYTES=5000000
LOG_BACKUP_COUNT=5

# --- Sentry (optional) ---
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0

# --- Upload/security ---
MAX_UPLOAD_BYTES=200000000
COOKIE_SECURE=false

# --- Auth/Contact rate limiting ---
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_SECONDS=900
CONTACT_RATE_LIMIT_WINDOW_SECONDS=60
CONTACT_RATE_LIMIT_ATTEMPTS=3

# --- CAPTCHA (optional) ---
CAPTCHA_SECRET=
CAPTCHA_PROVIDER=turnstile

# --- Redis (optional) ---
REDIS_URL=
